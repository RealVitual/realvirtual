.videoBoxContent
	position: relative
	padding-top 43%
	flexg(center,center)
	background #000
	border-radius 20px
	overflow hidden
	&:before
		gradientSolid(#000,0.4)
	&.active
		picture,
		.clickVideoBox,
		&:before
			opacity0()
	iframe,video
		full()
	video
		object-fit cover
.videoPopupContent
	centerXY()
	position fixed
	padding-top 39%
	background #000
	z-index 250
	opacity0()
	width 90%
	overflow hidden
	&.active
		opacity1()
	iframe,video
		full()
	video
		object-fit cover
		
.closeVideoBox,
.closeVideoPopup
	position absolute
	top 20px
	right 20px
	circle(30,#fff)
	z-index 30
	&:before
		color #000
		font-weight bold

.closeVideoPopup
	bottom calc(100% + 5px)
	right 20px
	top 30px
	
.clickVideo	
	centerXY()
	z-index 20
	text-align center
	color: #fff
	padding 20px
	border-radius 4px
	width fit-content
	flexg(center,center)
	circle(105,transparent)
	padding 30px
	span
		font-size 14px
		textg(t-700,normal,#fff)
		position relative
		z-index 10
	.lineCircleAnimate
		width 100%
		height 100%
		full()
		border-radius 50%
		box-sizing border-box
		animation onda 1s infinite ease-out
	&:after
		content ''
		position absolute
		width calc(100% - 20px)
		height calc(100% - 20px)
		centerXY()
		background #008AC9
		border-radius 50%
	i
		color #fff
		font-size 20px
		margin-right 5px


@keyframes onda
	0%
		transform: scale(0) 
		opacity: 0
	50%
		transform: scale(1) 
		opacity: 0.7
	100%
		transform: scale(1.1) 
		opacity: 0

@media screen and (max-width 1366px)
	.clickVideo
		width 90px
		height 90px
		span
			font-size 13px
		&:after
			width calc(100% - 20px)
			height calc(100% - 20px)

@media screen and (max-width 1024px)
	.closeVideoPopup
		left initial
		right 0
	.videoPopupContent
		padding-top 51%
		
@media screen and (max-width 480px)
	.closeVideoPopup
		top 10px
		right 10px