.b22
    margin 60px 0px
    h3
        text-align center
        font-size 24px
        textg(t-700,normal,rgba(38, 38, 38, 1))
        margin-bottom 32px
    .elemento
        border-right 1px solid rgba(224, 224, 224, 1)
        padding 0px 32px
        width 230px
        &:last-child
            border-right 0px
        span
            font-size 124px
            textg(t-700,1.1,rgba(38, 38, 38, 1))
            text-align center
        p
            text-align center
            font-size 20px
            textg(t-700,normal,rgba(38, 38, 38, 1))
            margin-bottom 0px
    #contador
        flexg(center,center)

@media screen and (max-width 1366px)
    .b22
        .elemento
            span
                font-size 90px

@media screen and (max-width 1024px)
    .b22
        margin 50px 0px
        .elemento
            span
                font-size 80px

@media screen and (max-width 768px)
    .b22
        margin 48px 0px
        .elemento
            padding 0px 20px
            width 150px
            span
                font-size 60px
            p
                font-size 16px

@media screen and (max-width 768px)
    .b22
        margin 48px 0px
        .elemento
            padding 0px 15px
            width 100px
            span
                font-size 32px
            p
                font-size 14px