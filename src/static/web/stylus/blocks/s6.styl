.b6
    margin 72px 0px

.b6Top
    text-align center
    margin-bottom 24px
    h4
        margin-bottom 8px
        font-size 24px
        textg(t-600,normal,#262626)

.b6Wrap
    flexg(center,center)
    flex-flow row wrap

.b6Item
    height 172px
    border 1px solid
    width 24%
    margin-right 1.33%
    border 1px solid #D8E7F4
    margin-bottom 24px
    &:nth-child(4n),
    &:last-child
        margin-right 0
    figure
        width 100%
        height 100%
        flexg(center,center)
        padding 40px

@media screen and (max-width 768px)
    .b6Item
        width 32%
        margin-right 2%
        &:nth-child(4n)
            margin-right 2%
        &:nth-child(3n)
            margin-right 0

@media screen and (max-width 480px)
    .b6Item
        width 49%
        margin-right 2%
        height 150px
        &:nth-child(4n)
            margin-right 2%
        &:nth-child(3n)
            margin-right 2%
        &:nth-child(2n)
            margin-right 0%
        figure
            padding 24px