footer
    background #333333
    padding 30px 0px
    h3
        font-size 28px
        textg(t-600,normal,#fff)
        max-width 340px
        width 100%

.footerRedes
    width 100%
    a
        margin-right 

.footerWsp
    img
        margin-right 10px
    h4
        font-size 14px
        textg(t-400,normal,#fff)
        text-transform uppercase
        span
            display block
            width 100%
            font-size 20px
            textg(t-700,normal,#fff)
            margin-top 10px

.footerRedesContent
    max-width: 230px
    width 100%
    h4
        font-size 14px
        textg(t-500,normal,#fff)
        margin-bottom 10px
        text-transform uppercase

@media screen and (max-width 1366px)
    footer
        h3
            font-size 24px
            max-width 300px

@media screen and (max-width 1024px)
    footer h3
        font-size 20px
        max-width: 250px

@media screen and (max-width 768px)
    footer
        .grilla
            flex-direction column
        h3
            margin-bottom 40px
            text-align center
    .footerWsp
        margin-bottom 40px
        img
            width 50px
    .footerRedesContent
        h4
            text-align center
    .footerRedes
        justify-content center
        a
            margin-right 10px
            &:last-child
                margin-right 0px
@media screen and (max-width 768px)
    footer h3
        font-size 18px
        max-width: 250px

    