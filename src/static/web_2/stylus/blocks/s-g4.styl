.g4InfoBlogDetalle
	max-width 800px
	width 100%
	margin auto
	.gParrafo
		p
			margin-bottom 20px
			&:last-child
				margin-bottom 0px
		h2,h3,h4,h5,h6
			font-size 18px
			textg(t-700,normal,#000)
			margin-top 30px
			margin-bottom 10px
	.videoBoxContent
		margin 50px 0px
		padding-top 55%
		&.noVideo
			padding-top 0
			&:before
				display none
				height auto
				padding-top 0
				
.g4Redes
	flexg(center,center)
	button,a
		border 0px
		background transparent
		margin-right 15px
		padding 0px
		&:last-child
			margin-right 0px
		&:before
			font-size 24px
			color #000
		&:hover
			&:before
				color red
.copyText
	position relative
.textAlert
	position absolute
	left 0
	bottom 100%
	border-radius 6px
	width fit-content
	padding: 4px 6px
	background rgba(#000,0.5)
	font-size 10px
	textg(t-0,normal,#fff)
	opacity0()
	&.active
		opacity1()
		