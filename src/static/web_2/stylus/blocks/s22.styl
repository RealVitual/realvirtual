.b22
    margin 60px 0px
    h3
        text-align center
        font-size 18px
        textg(t-300,normal,#B9B9B9)
        margin-bottom 32px
        text-transform uppercase
    .elemento
        border-right 1px solid rgba(224, 224, 224, 1)
        padding 0px 32px
        width 230px
        &:last-child
            border-right 0px
        span
            font-size 96px
            textg(t-400,1.1,#fff)
            text-align center
        p
            text-align center
            font-size 20px
            textg(t-700,normal,#B9B9B9)
            margin-bottom 0px
    #contador
        flexg(center,center)

@media screen and (max-width 1366px)
    .b22
        .elemento
            span
                font-size 80px

@media screen and (max-width 1024px)
    .b22
        margin 50px 0px
        .elemento
            span
                font-size 75px

@media screen and (max-width 768px)
    .b22
        margin 48px 0px
        .elemento
            padding 0px 20px
            width 150px
            span
                font-size 60px
            p
                font-size 16px

@media screen and (max-width 768px)
    .b22
        margin 48px 0px
        .elemento
            padding 0px 15px
            width 100px
            span
                font-size 35px
            p
                font-size 14px