.b1
	height calc(100vh - 20px)
	width calc(100% - 40px)
	margin auto
	margin-top 10px
	border-radius 32px
	overflow hidden
	position relative
	background #0D0D0D
	position relative
	.grilla
		position relative
		z-index 20
		height 100%
		flexg(center,space-between)
	.imgAbsolute
		position absolute
		width 40%
		bottom 0
		right 0
		z-index 3
	&:after
		content ''
		background: linear-gradient(180deg, rgba(13, 13, 13, 0) 0%, #0D0D0D 100%)
		position absolute
		width 100%
		bottom 0
		left 0
		height 30%
		z-index 10

.b1Info
	width 100%

.b1Top
	.button
		height 56px
		background #FA1FAE
		flexg(center,center)
		font-size 20px
		textg(t-500,normal,#fff)
		text-decoration underline
		width fit-content
		padding 0px 60px
		border-radius 100px
		margin-left 45px

.b1InfoTopLeft
	img
		width 650px

.b1Bottom
	display grid
	grid-gap 16px
	margin-top 120px
	max-width 750px
	width 100%
	h3
		font-size 24px
		textg(t-700,normal,#fff)
	.gParrafo
		font-size 18px
		textg(t-500,normal,#fff)

@media screen and (max-width 1440px)
	.b1InfoTopLeft
		img
			width 500px

@media screen and (max-width 1366px)
	.b1InfoTopLeft
		img
			width 400px
	.b1Bottom
		margin-top 70px

@media screen and (max-width 1024px)
	.b1
		height 600px
	.b1InfoTopLeft
		img
			width 300px
	.b1Bottom
		margin-top 40px
	.b1InfoTopRight
		width 120px
		img
			width 100%
@media screen and (max-width 768px)
	.b1Top
		align-items flex-start
		grid-gap 30px
	.b1InfoTopLeft
		img
			width 200px
	.b1InfoTopRight
		width 80px
	.b1
		height auto
		padding 100px 0px
@media screen and (max-width 480px)
	.b1InfoTopLeft
		align-items: flex-start
		grid-gap 20px
	.b1Top .button
		margin 0
	.b1
		padding-top 150px
		padding-bottom 100px
		.imgAbsolute
			width 70%
	.b1Bottom
		h3
			font-size 20px
		.gParrafo
			font-size 16px