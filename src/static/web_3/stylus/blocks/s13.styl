.b13Title
    fontg(32,64)
    textg(t-800,normal,#262626)
    margin-bottom 58px
    max-width: 650px
    width 100%
.b13Links
    .gButton
        color #fff
        margin-right 32px
    .return
        font-size 20px
        textg(t-800,normal,#17181B)


@media screen and (max-width 1024px)
    .b13Links .return
        font-size 18px
    
@media screen and (max-width 480px)
    .b13Title
        text-align center
    .b13Links
        flex-direction column
        .gButton
            max-width 100%
            width 100%
            margin-right 0
        .return
            width 100%
            text-align center
            margin-top 32px
            font-size 16px