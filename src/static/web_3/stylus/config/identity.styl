sizeg(a, n, p)
	if a == font-size
		font-size "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
	else if a == width
		width "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
	else if a == height
		height "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
	else if a == left
		left "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
	else if a == padding-top
		padding-top "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
	else if a == top
		top "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)

