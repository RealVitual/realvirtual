// Colors idendity
c-black = #262626
c-white = #FFF
c-gray = #ffffff

// Fonts
// t-100 = 'DMSans-Thin', sans-serif
// t-200 = 'DMSans-ExtraLight', sans-serif
t-300 = 'InterTight-Light', sans-serif
t-400 = 'InterTight-Regular', sans-serif
t-500 = 'InterTight-Medium', sans-serif
t-600 = 'InterTight-SemiBold', sans-serif
t-700 = 'InterTight-Bold', sans-serif
t-800 = 'InterTight-ExtraBold', sans-serif
// t-900 = 'DMSans-Black', sans-serif

icomoon = 'icomoon'

// Mixins
placeholder(color,famyli)
	::-webkit-input-placeholder { color: color; font-family: famyli; } /* WebKit */
	:-moz-placeholder { color: color; font-family: famyli; } /* Firefox 18- */
	::-moz-placeholder { color: color; font-family: famyli; } /* Firefox 19+ */
	:-ms-input-placeholder { color: color; font-family: famyli; } /* IE 10+ */

imgrelative()
	width fit-content
	height auto
	picture
		position: relative
		width fit-content
		height auto
		display block
		font-size 0px
		img
			position: relative
			max-width 100%
			height auto
					
scrollbar(c,b,w,h)
	::-webkit-scrollbar
		width "%spx" % (w)
		height "%spx" % (h)
		scroll-behavior: smooth
	::-webkit-scrollbar-track
		background b
		border-radius 20px
	::-webkit-scrollbar-thumb
		background c
		&:hover
			background c

gradientSolid(color,opacity)
	content: ''
	background rgba(color,opacity)
	full()
	z-index 3
	pointer-events: none
				
backgroundsize()
	background-repeat no-repeat
	background-size cover
	background-position center center

full()
	position: absolute;
	width 100%
	height 100%
	top 0
	left 0
	
circle(m,color)
	width "%spx" % (m)
	height "%spx" % (m)
	background: color
	border-radius 50%
	flexg(center,center)

centerY()
	top 50%
	transform translateY(-50%)
	position absolute
	
centerX()
	position absolute
	left 0
	right 0
	margin auto
	
centerXY()
	centerX()
	centerY()

pseudoSolid(color,opacity)
	content: ''
	background rgba(color,opacity)
	full()
	z-index 3
	pointer-events: none

flexg(vertical,horizontal)
	display flex
	align-items vertical
	justify-content horizontal

opacity0()
	opacity 0
	visibility hidden
	transition: all 400ms cubic-bezier(0.78, 0.13, 0.24, 0.88)
	pointer-events: none
	
opacity1()
	opacity 1
	visibility visible
	transition: all 400ms cubic-bezier(0.78, 0.13, 0.24, 0.88)
	pointer-events: all
	
linesText(num)
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: num;
	overflow: hidden;
	
textg(family,lineh,clr)
	font-family family
	line-height lineh
	color clr

fontg(n, p)
	font-size "%spx" % (p)
	@media screen and (max-width:1600px)
		font-size "calc(%spx + (%s - %s) * ((100vw - 375px) / (1920 - 375)))" % (n p n)
